<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="417.0" maxWidth="845.0" minHeight="417.0" minWidth="845.0" prefHeight="417.0" prefWidth="845.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.yurinero.hashana.controllers.HashController">
    <children>
        <TabPane prefHeight="552.0" prefWidth="845.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Hash">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="513.0" prefWidth="810.0">
                            <children>
                                <TextArea fx:id="textInputArea" layoutX="382.0" layoutY="26.0" prefHeight="155.0" prefWidth="450.0" promptText="Input your text to be hashed here. Be aware of whitespace and newlines!" wrapText="true" />
                                <ChoiceBox fx:id="hashChoice" layoutX="494.0" layoutY="193.0" prefHeight="25.0" prefWidth="87.0" />
                                <TextArea fx:id="hashOutputField" editable="false" layoutX="383.0" layoutY="230.0" prefHeight="153.0" prefWidth="448.0" promptText="Your hash will appear here." wrapText="true" />
                                <Button fx:id="hashConffirmButton" layoutX="591.0" layoutY="194.0" mnemonicParsing="false" onAction="#handleHashButtonClick" text="Hash it!" />
                                <TextArea fx:id="hashInfoField" editable="false" layoutX="14.0" layoutY="26.0" prefHeight="361.0" prefWidth="353.0" promptText="Information about your chosen method." wrapText="true" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="File Hash Check">
                    <content>
                        <fx:include source="file-check.fxml" />
                    </content>
                </Tab>
            <Tab text="Password Generator">
              <content>
               <fx:include source="passwordgen.fxml" />
              </content>
            </Tab>
                <Tab text="About">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ImageView fitHeight="73.0" fitWidth="350.0" layoutX="248.0" layoutY="38.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../HASHANA.png" />
                           </image>
                        </ImageView>
                     </children></AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
