            <Label layoutX="23.0" layoutY="176.0" text="Computed Hash:" />
            <Button fx:id="browseButton" accessibleHelp="Browse for files on your computer to check the hash." accessibleText="Browse button" layoutX="271.0" layoutY="88.0" onAction="#handleFileBrowse" text="Browse...">
            <tooltip>
               <Tooltip fx:id="cancelTooltip" text="CTRL + O" textAlignment="CENTER" wrapText="true" />
            </tooltip></Button>
            <Button fx:id="verifyButton" layoutX="271.0" layoutY="172.0" onAction="#handleVerify" text="Verify" />
            <Button fx:id="cancelButton" accessibleHelp="This button will cancel the file check operation, use CTRL + X as a shortcut." accessibleText="File Hash Cancel Button" layoutX="324.0" layoutY="232.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
            <ProgressBar fx:id="hashProgress" layoutX="14.0" layoutY="239.0" prefHeight="18.0" prefWidth="303.0" progress="0.0" />
        </children>
    </AnchorPane>
