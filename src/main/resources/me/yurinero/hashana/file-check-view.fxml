<AnchorPane fx:id="rootAnchor" prefHeight="400.0" prefWidth="795.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.yurinero.hashana.controllers.FIleCheckController">
    <AnchorPane layoutX="14.0" layoutY="41.0" prefHeight="281.0" prefWidth="402.0" styleClass="filePickerAnchor">
        <children>
            <Label fx:id="progressLabel" alignment="CENTER" layoutX="10.0" layoutY="217.0" prefHeight="17.0" prefWidth="303.0" text="Progress" />
            <ChoiceBox fx:id="fileHashChoice" accessibleHelp="Choose the relevant hashing algorhitm" accessibleText="Hash Allgorhitm Choice Box" layoutX="157.0" layoutY="43.0" />
            <TextField fx:id="filePathField" editable="false" layoutX="115.0" layoutY="88.0" />
            <Button fx:id="calculateHashButton" accessibleHelp="Initiate the hash calculation after selecting a file." accessibleText="Calculate hash" alignment="CENTER" layoutX="225.0" layoutY="44.0" onAction="#handleCalculateHash" text="Calculate Hash" />
            <Label layoutX="87.0" layoutY="48.0" text="Algorithm:" />
            <Label layoutX="47.0" layoutY="92.0" text="Select File:" />
            <Label layoutX="27.0" layoutY="123.0" text="Expected Hash:" />
